<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="view" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
	<top>
      <VBox BorderPane.alignment="CENTER">
         <children>
      		<ToolBar prefHeight="40.0" prefWidth="200.0">
      			<items>
      				<Button fx:id="nuevoButton" mnemonicParsing="false" onAction="#onNuevoButtonAction">
      					<graphic>
      						<ImageView pickOnBounds="true" preserveRatio="true">
      							<image>
      								<Image url="@../images/new-32x32.png" />
      							</image>
      						</ImageView>
      					</graphic>
      				</Button>
      				<Button fx:id="abrirButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onAbrirButtonAction">
      					<graphic>
      						<ImageView pickOnBounds="true" preserveRatio="true">
      							<image>
      								<Image url="@../images/open-32x32.png" />
      							</image>
      						</ImageView>
      					</graphic>
      				</Button>
      				<Button fx:id="guardarButton" layoutX="62.0" layoutY="10.0" mnemonicParsing="false" onAction="#onGuardarButtonAction">
      					<graphic>
      						<ImageView pickOnBounds="true" preserveRatio="true">
      							<image>
      								<Image url="@../images/save-32x32.png" />
      							</image>
      						</ImageView>
      					</graphic>
      				</Button>
      				<Button fx:id="generarButton" layoutX="114.0" layoutY="10.0" mnemonicParsing="false" onAction="#onGenerarButtonAction">
      					<graphic>
      						<ImageView pickOnBounds="true" preserveRatio="true">
      							<image>
      								<Image url="@../images/javafile-32x32.png" />
      							</image>
      						</ImageView>
      					</graphic>
      				</Button>
      			</items>
      		</ToolBar>
            <HBox alignment="BASELINE_LEFT" spacing="5.0">
               <children>
                  <Label text="Paquete:" />
                  <TextField fx:id="paqueteText" prefColumnCount="20" />
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
	</top>
	<center>
		<SplitPane dividerPositions="0.3" prefHeight="160.0" prefWidth="200.0" BorderPane.alignment="CENTER">
			<items>
				<BorderPane>
					<top>
						<BorderPane BorderPane.alignment="CENTER_LEFT">
							<left>
								<Label text="Beans:" BorderPane.alignment="BOTTOM_LEFT" />
							</left>
							<right>
								<HBox alignment="CENTER_RIGHT" spacing="5.0" BorderPane.alignment="CENTER">
									<children>
										<Button fx:id="nuevoBeanButton" mnemonicParsing="false" onAction="#onNuevoBeanButtonAction">
											<graphic>
												<ImageView pickOnBounds="true" preserveRatio="true">
													<image>
														<Image url="@../images/addbean-32x32.png" />
													</image>
												</ImageView>
											</graphic>
										</Button>
										<Button fx:id="eliminarBeanButton" layoutX="83.0" layoutY="48.0" mnemonicParsing="false" onAction="#onEliminarBeanButtonAction">
											<graphic>
												<ImageView pickOnBounds="true" preserveRatio="true">
													<image>
														<Image url="@../images/removebean-32x32.png" />
													</image>
												</ImageView>
											</graphic>
										</Button>
									</children>
									<BorderPane.margin>
										<Insets />
									</BorderPane.margin>
								</HBox>
							</right>
							<BorderPane.margin>
								<Insets bottom="5.0" />
							</BorderPane.margin>
						</BorderPane>
					</top>
					<padding>
						<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
					</padding>
					<center>
						<ListView fx:id="beansList" BorderPane.alignment="CENTER" />
					</center>
				</BorderPane>
            <BorderPane fx:id="beanPane">
               <center>
                  <VBox fx:id="infoPane" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                     <children>
                        <ImageView pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/noselected-64x64.png" />
                           </image>
                        </ImageView>
                        <Label contentDisplay="TOP" text="No hay ningÃºn bean seleccionado." />
                     </children>
                  </VBox>
               </center>
            </BorderPane>
			</items>
		</SplitPane>
	</center>
</BorderPane>
